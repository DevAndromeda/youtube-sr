{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./build",
		"strict": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"removeComments": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": ["node_modules", "deno", "dev"],
}